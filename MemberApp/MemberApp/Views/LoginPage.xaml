<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MemberApp.Views.LoginPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ViewModels="clr-namespace:MemberApp.ViewModels;assembly = MemberApp"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <ContentPage.BindingContext>
        <ViewModels:MainViewModel />
    </ContentPage.BindingContext>
    <StackLayout
        Padding="10"
        Spacing="10"
        VerticalOptions="Center">
        <Label HorizontalOptions="CenterAndExpand" Text="請輸入帳號：" />
        <Entry Text="{Binding Keyword, Mode=TwoWay}" />
        <Label HorizontalOptions="CenterAndExpand" Text="請輸入密碼：" />
        <Entry Text="" />
        <Button
            x:Name="BtnClean"
            Text="清空"
            />
        <Button
            x:Name="BtnLogin"
            Command="{Binding LoginCommand}"
            Text="登入" />
        <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />
        <Label
            FontSize="24"
            Text="{Binding StatusMessage}"
            TextColor="Green" />
    </StackLayout>

</ContentPage>